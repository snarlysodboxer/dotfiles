[github]
  user = snarlysodboxer

[core]
  whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
  editor=/usr/bin/vim
  excludesfile = ~/.gitignore_global

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow
  frag = magenta
  old = red
  new = green

[color "status"]
  added = green
  changed = magenta
  untracked = red
  branch = green

[merge]
  tool = opendiff
  defaultToUpstream = true
  conflictStyle=diff3

[alias]
  s = status
  g = log --graph --decorate --pretty=oneline --abbrev-commit
  ga = log --graph --decorate --pretty=oneline --abbrev-commit --all
  ci = commit
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  ls = ls-files
  ign = ls-files -o -i --exclude-standard
  ff = merge --ff-only

[push]
  default = simple

[commit]
  gpgsign = true
